{
  "name": "chainpoint-node-web-service",
  "version": "0.0.1",
  "description": "Chainpoint front-end HTTP API server",
  "author": "Jason Bukowski <jason@tierion.com>",
  "license": "AGPL-3.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "./node_modules/mocha/bin/mocha test/*.js",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ],
      "*.{json,css,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "amqplib": "^0.5.2",
    "bignumber.js": "^4.1.0",
    "blake2s-js": "^1.2.2",
    "bunyan": "^1.8.12",
    "chainpoint-parse": "^3.1.4",
    "envalid": "^3.1.1",
    "ip": "^1.1.5",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "restify": "^4.3.0",
    "restify-cors-middleware": "^0.0.8",
    "restify-errors": "^5.0.0",
    "semver": "^5.4.1",
    "sequelize": "^4.22.6",
    "sequelize-cockroachdb": "^1.0.2",
    "tendermint": "^4.0.0",
    "url": "^0.11.0",
    "uuid": "^3.1.0",
    "uuid-time": "^1.0.0",
    "uuid-validate": "^0.0.2",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "charlatan": "^1.1.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "mocha": "^3.4.2",
    "prettier": "^1.16.4",
    "supertest": "^3.0.0"
  }
}
